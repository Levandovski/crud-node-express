<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>


{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}" class="btn btn-success mt-4" name='id'>Editar Categorias</a>
             <a href="/admin/categorias/delete/{{_id}}" class="btn btn-danger mt-4" name='id'>Deletar Categorias</a>
        </div>
    </div>
{{else}}

{{/each}}